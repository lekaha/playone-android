<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchParentSize">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MatchParentWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MatchParentHeight">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParentHeightWrapContentWidth">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchParentWidthWrapContentHeight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WrapContentSize">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="WrapContentWidth">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="WrapContentHeight">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HorizontalWrapContentLinearLayout" parent="WrapContentSize">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VerticalWrapContentLinearLayout" parent="WrapContentSize">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="VerticalMatchParentWidthWrapContentHeightLinearLayout"
           parent="MatchParentWidthWrapContentHeight">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="VerticalMatchParentSizeLinearLayout"
           parent="MatchParentSize">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParentSizeNoMargin" parent="MatchParentSize">
        <item name="android:paddingLeft">@dimen/no_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/no_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/no_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/no_vertical_padding</item>
    </style>

    <style name="WrapContentSizeCenter" parent="WrapContentSize">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center|center_horizontal|center_vertical</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
    </style>

    <style name="Center">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center|center_horizontal|center_vertical</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
    </style>

    <style name="CenterProgressBar">
        <item name="android:layout_height">@dimen/center_progress_bar_size</item>
        <item name="android:layout_width">@dimen/center_progress_bar_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- For the constraint layout -->
    <style name="ConstraintMatchParentSize">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="HeaderTextAppearance" parent="TextAppearance.AppCompat.Body1" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderInfoStyle" parent="WrapContentSize" >
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="HeaderIcon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="NavigationDrawerContentHorizontalLine" parent="MatchParentWidth">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@color/silver</item>
    </style>
</resources>
