<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.playone.mobile.ui"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.playone.mobile.ui.BufferooApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">

        <activity
            android:name=".playone.PlayoneActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".playone.VerifyActivity"
                  android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="playonedevelop.firebaseapp.com" android:scheme="http"/>
                <data android:host="playonedevelop.firebaseapp.com" android:scheme="https"/>
            </intent-filter>
        </activity>

        <activity android:name="com.playone.mobile.ui.browse.BrowseActivity"/>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"/>

    </application>

</manifest>